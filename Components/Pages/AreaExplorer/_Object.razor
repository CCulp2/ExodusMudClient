@using ExodusMudClient.Data.Game.Models
@inject IAreaFileConverter AreaConverter
@inject IDialogService DialogService

@if (selectedMobile != null)
{
    <MudDialog>
        <DialogContent>
            <MudContainer Style="max-height: 700px; overflow-y: scroll">

                <MudText Typo="Typo.h3">Object Information</MudText>
                <MudDivider />
                <MudGrid>
                    <MudItem lg="6">
                        <MudField Label="Name" Variant="Variant.Outlined" Class="mt-4">
                            @(new MarkupString(AreaConverter.ConvertExodusColor(selectedMobile.NameForTargeting)))
                        </MudField>
                        <MudField Label="Short Description" Variant="Variant.Outlined" Class="mt-4">
                            @(new MarkupString(AreaConverter.ConvertExodusColor(selectedMobile.ShortDescription)))
                        </MudField>
                        <MudField Label="Long Description" Variant="Variant.Outlined" Class="mt-4">
                            @(new MarkupString(AreaConverter.ConvertExodusColor(selectedMobile.LongDescription)))
                        </MudField>
                        <MudField Label="Description" Variant="Variant.Outlined" Class="mt-4">
                            @(new MarkupString(AreaConverter.ConvertExodusColor(selectedMobile.Description)))
                        </MudField>
                    </MudItem>
                    <MudItem lg="6">
                        <MudField Label="Vnum" Variant="Variant.Outlined" Class="mt-4">@selectedMobile.Vnum</MudField>
                        <MudField Label="Race" Variant="Variant.Outlined" Class="mt-4">@selectedMobile.Race</MudField>
                        <MudField Label="Alignment" Variant="Variant.Outlined" Class="mt-4">@selectedMobile.Alignment
                        </MudField>
                        <MudField Label="Level" Variant="Variant.Outlined" Class="mt-4">@selectedMobile.Level</MudField>
                    </MudItem>
                </MudGrid>
                <MudGrid>
                    <MudItem lg="12">
                        <MudList Clickable="false">
                            <MudListItem>Act Flags: @string.Join(", ", selectedMobile.ActFlags)</MudListItem>
                            <MudListItem>Affect Flags: @string.Join(", ", selectedMobile.AffectFlags)</MudListItem>
                            <MudListItem>Off Flags: @selectedMobile.OffFlags</MudListItem>
                            <MudListItem>Imm Flags: @selectedMobile.ImmFlags</MudListItem>
                            <MudListItem>Res Flags: @selectedMobile.ResFlags</MudListItem>
                            <MudListItem>Vuln Flags: @selectedMobile.VulnFlags</MudListItem>
                        </MudList>
                    </MudItem>
                </MudGrid>
                <MudList Clickable="false">
                    <MudListItem>Hit Roll: @selectedMobile.HitRoll</MudListItem>
                    <MudListItem>Armor Class: @(string.Join(", ", selectedMobile.ArmorClass))</MudListItem>
                    <MudListItem>Damage Type: @selectedMobile.DamageType</MudListItem>
                    <MudListItem>Sex: @selectedMobile.Sex</MudListItem>
                    <MudListItem>Size: @selectedMobile.Size</MudListItem>
                    <MudListItem>Material: @selectedMobile.Material</MudListItem>
                </MudList>
            </MudContainer>
        </DialogContent>
    </MudDialog>

}

@code {
    [Parameter]
    public AreaFileMobile selectedMobile { get; set; }
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

}